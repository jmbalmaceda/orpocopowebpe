<assembly
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd"
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <id>${environment}</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
        	
        	<lineEnding>unix</lineEnding>
            <filtered>true</filtered>
            <directory>src/config/${environment}</directory>
            <outputDirectory>/cyberbank/reportCenter/reportCenter-services/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>**/*.cvsignore</exclude>
                <exclude>**/CVS</exclude>
                <exclude>**/*.sid</exclude>
                <exclude>**/db**.*</exclude>
                <exclude>**/*.formatted</exclude>
            </excludes>
        </fileSet>        
        <fileSet>        	
        	<lineEnding>unix</lineEnding>
            <filtered>true</filtered>
            <directory>templates/images</directory>
            <outputDirectory>/cyberbank/reportCenter/reportCenter-services/dummyImage</outputDirectory>
            <includes>
                <include>background_selfservice.png</include>
            </includes>
            <excludes>
                <exclude>**/*.cvsignore</exclude>
                <exclude>**/CVS</exclude>
                <exclude>**/*.sid</exclude>
                <exclude>**/db**.*</exclude>
                <exclude>**/*.formatted</exclude>
            </excludes>
        </fileSet>
     </fileSets>   
</assembly>